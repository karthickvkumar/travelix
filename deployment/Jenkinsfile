pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                nodejs('NodeJS') {
                    bat 'npm install'
                }
            }
        }
        stage('Run Tests') {
            steps {
                nodejs('NodeJS') {
                    bat 'npm test -- --coverage --watchAll=false'
                }
            }
        }
        stage('Build') {
            steps {
                nodejs('NodeJS') {
                    bat 'npm run build'
                }
            }
        }
    }
}